<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assistence_Control.Views.Empleados"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Layout="using:DevExpress.UI.Xaml.Layout"
    x:Class="Assistence_Control.Views.Empleados.abcEmpleado"
    xmlns:controls="using:MyToolkit.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{StaticResource MainBackground}"/>
        </Grid.Background>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Empleados" Margin="30,0,0,0" FontSize="50" VerticalAlignment="Bottom"></TextBlock>
                    <AutoSuggestBox x:ConnectionId='12' Grid.Column="1" PlaceholderText="Search" DisplayMemberPath="Nombre" QueryIcon="Find" Width="200"                                                                                                                                            VerticalAlignment="Bottom" FontSize="25" Height="32" HorizontalAlignment="Right" Margin="0,0,30,10"/>
                </Grid>
                <controls:DataGrid x:ConnectionId='1' MaxHeight="360" x:Name="DataGrid" SelectionMode="Single" Margin="30,0,30,10" Grid.Row="1" ItemsSource="{Binding EmpleadoITem}" HeaderBackground="#FF8B8383" >
                    <controls:DataGrid.Foreground>
                        <SolidColorBrush Color="White"/>
                    </controls:DataGrid.Foreground>
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Width="200" Header="Numero de empleado" Binding="{Binding NoEmpleado}"/>
                        <controls:DataGridTextColumn Width="200" Header="Nombre" Binding="{Binding Nombre}"/>
                        <controls:DataGridTextColumn Width="200" Header="Apellido Paterno" Binding="{Binding ApellidoPaterno}" />
                        <controls:DataGridTextColumn Width="200" Header="Apellido Materno" Binding="{Binding ApellidoMaterno}"/>
                        <controls:DataGridTextColumn Width="200" Header="Edad" Binding="{Binding Edad}"/>
                        <controls:DataGridTextColumn Width="200" Header="Fecha Alta" Binding="{Binding FechaAlta}"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="18,0">
                    <Button x:ConnectionId='9' Name="btnEditar" VerticalAlignment="Top" Content="Editar" Foreground="#FF0F06C7"                        >
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource MainBackground}"/>
                        </Button.Background>
                    </Button>
                    <Button x:ConnectionId='10' Name="btnEliminar" VerticalAlignment="Top" Content="Eliminar" Foreground="#FF0F06C7"                          >
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource MainBackground}"/>
                        </Button.Background>
                    </Button>

                    <Button x:ConnectionId='11' Name="btnAgregar"                          VerticalAlignment="Top" Content="Agregar Nuevo" Foreground="#FF0F06C7">
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource MainBackground}"/>
                        </Button.Background>
                    </Button>

                </StackPanel>
                <Grid x:ConnectionId='2' Name="gridAgregar" Visibility="Collapsed" Grid.Row="3" Margin="30,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='3' Name="tbNumeroEmpleado" Header="Numero de empleado"></TextBox>
                    <TextBox x:ConnectionId='4' Name="tbNombre" Header="Nombre(s)" Grid.Row="1"></TextBox>
                    <TextBox x:ConnectionId='5' Name="tbApellidoPaterno" Header="Apellido Paterno" Grid.Row="2"></TextBox>
                    <TextBox x:ConnectionId='6' Name="tbApellidoMaterno" Header="Apellido Materno" Grid.Row="3"></TextBox>
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:ConnectionId='7' Name="btnGuardar" Content="Guardar" Margin="0,10,10,10" Height="60" FontSize="25"                          HorizontalAlignment="Stretch">
                            <Button.Foreground>
                                <SolidColorBrush Color="{StaticResource MainBackground}"/>
                            </Button.Foreground>
                            <Button.Background>
                                <SolidColorBrush Color="#FF70AD47"/>
                            </Button.Background>
                        </Button>
                        <Button x:ConnectionId='8' Name="btnCancelar" Content="Cancelar" Grid.Column="2" Margin="10,10,0,10" Height="60" FontSize="25"                           HorizontalAlignment="Stretch">
                            <Button.Background>
                                <SolidColorBrush Color="{StaticResource btnCancel}"/>
                            </Button.Background>
                            <Button.Foreground>
                                <SolidColorBrush Color="{StaticResource MainBackground}"/>
                            </Button.Foreground>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

